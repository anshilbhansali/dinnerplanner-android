<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="390dp"
            android:layout_height="10dp"
            android:background="#fa0404">

        </TextView>

        <TextView
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:background="#fa0303"/>

        <TextView
            android:layout_width="10dp"
            android:layout_height="40dp"
            android:background="#fa0303"
            android:layout_marginLeft="375dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="-10dp"
            android:layout_alignParentRight="true"
            android:text="X"
            android:textSize="40sp"
            android:background="#050505"
            android:textColor="#ffffff"
            android:clickable="true"
            android:id="@+id/close_frag"/>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="10dp"
            android:layout_height="520dp"
            android:background="#fa0303" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of Dish"
                android:textSize="30sp"
                android:paddingTop="50dp"
                android:paddingLeft="80dp"
                android:id="@+id/selected_dish_fragment"/>

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="1dp" />
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:background="#010101" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="190dp"
                    android:src="@drawable/sourdough"
                    android:paddingLeft="15dp"
                    android:paddingTop="40dp"
                    android:id="@+id/img_frag"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cost: "
                            android:textSize="30sp"
                            android:paddingTop="60dp"/>

                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="36dp"
                            android:text="XX"
                            android:textSize="30sp"
                            android:id="@+id/cost_per_dish"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kr"
                            android:textSize="30sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="("
                            android:textSize="25sp"/>

                        <TextView
                            android:layout_width="45dp"
                            android:layout_height="35dp"
                            android:text="xx"
                            android:textSize="25sp"
                            android:id="@+id/cost_per_dish_per_person"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="kr/Person)     "
                            android:textSize="25sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose"
                android:textSize="25sp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="60dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#f70303"
                android:textColor="#ffffff"
                android:id="@+id/choose"
                android:clickable="true" />

            <TextView
                android:layout_width="365dp"
                android:layout_height="10dp"
                android:layout_marginTop="65dp"
                android:background="#fb0505" />

        </LinearLayout>

       <TextView
           android:layout_width="15dp"
           android:layout_height="520dp"
           android:background="#fb0505" />

    </LinearLayout>



</LinearLayout>
